<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         id="WebApp_ID" 
         version="3.1">

  <display-name>AutomobileStorage</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file> 
  </welcome-file-list>

  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/catalogo_auto</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

   <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>it.unisa.servlet.ProductControl</servlet-class>
    <multipart-config>
        <max-file-size>10485760</max-file-size> <!-- 10 MB max file size -->
        <max-request-size>20971520</max-request-size> <!-- 20 MB max request size -->
        <file-size-threshold>0</file-size-threshold> <!-- No temporary files -->
    </multipart-config>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern> 
  </servlet-mapping>
  
  <servlet>
  <servlet-name>UpdateProduct</servlet-name>
  <servlet-class>it.unisa.servlet.UpdateCart</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>UpdateProduct</servlet-name>
  <url-pattern>/UpdateProduct</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>AddToCart</servlet-name>
  <servlet-class>it.unisa.servlet.AddToCart</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>AddToCart</servlet-name>
  <url-pattern>/AddToCart</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>RemoveFromCart</servlet-name>
  <servlet-class>it.unisa.servlet.RemoveFromCart</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>RemoveFromCart</servlet-name>
  <url-pattern>/RemoveFromCart</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>UpdateCart</servlet-name>
  <servlet-class>it.unisa.servlet.UpdateCart</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>UpdateCart</servlet-name>
  <url-pattern>/UpdateCart</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>UtenteControl</servlet-name>
  <servlet-class>it.unisa.servlet.UtenteControl</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>UtenteControl</servlet-name>
  <url-pattern>/UtenteControl</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>Logout</servlet-name>
  <servlet-class>it.unisa.servlet.Logout</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>Logout</servlet-name>
  <url-pattern>/logout</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>ModificaUtente</servlet-name>
  <servlet-class>it.unisa.servlet.ModificaUtente</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>ModificaUtente</servlet-name>
  <url-pattern>/ModificaUtente</url-pattern>
</servlet-mapping>

<error-page>
    <error-code>404</error-code>
    <location>/jsp/common/error.jsp</location>
</error-page>

<error-page>
    <error-code>500</error-code>
    <location>/jsp/common/error.jsp</location>
</error-page>

<error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/jsp/common/error.jsp</location>
</error-page>
</web-app>
